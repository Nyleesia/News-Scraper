<div>
    <h1 class="card center-align">Read the Latest News</h1>
    <div class="row">
        <div class="col-sm-3"></div>
        <h3 class="card col-sm-6">Click on "Scrape" Button to Retrieve the Latest News</h3>
    </div>
</div>

<div class="row">
    <div class="col-sm-2"></div>

    <div class="col-sm-8">

        {{#each article}}
        <div class="card-panel">
            <h4>{{this.title}}</h4>
            <a href="/readArticle/{{this._id}}" class="btn" id="signUp">Read</a>
        </div>

        {{/each}}

    </div>
</div>